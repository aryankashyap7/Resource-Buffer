#include <bits/stdc++.h>
using namespace std;

int main()
{
    int cases, a, b;
    cin >> cases;
    for (int i = 0; i < cases; i++)
    {
        cin >> a >> b;

        if ((a + b) % 3 == 0 && abs(a - b) <= min(a, b))
            cout << "YES" << endl;
        else
            cout << "NO" << endl;
    }
    return 0;
}
